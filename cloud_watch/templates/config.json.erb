{
   "agent":{
      "metrics_collection_interval":30,
      "run_as_user":"root"
   },
   "metrics":{
      "append_dimensions":{
              "InstanceId":"${aws:InstanceId}",
              "InstanceType":"${aws:InstanceType}"
      },
      "metrics_collected":{
         "collectd":{
            "metrics_aggregation_interval":30
         },
         "disk":{
            "measurement":[
               "used_percent"
            ],
            "metrics_collection_interval":30,
            "resources":[
               "/"
            ],
            "append_dimensions": {
               "stackName": "<%= stack_name %>"
            }
         },
         "statsd":{
            "metrics_aggregation_interval":30,
            "metrics_collection_interval":30,
            "service_address":":8125"
         }
      }
   }
}
